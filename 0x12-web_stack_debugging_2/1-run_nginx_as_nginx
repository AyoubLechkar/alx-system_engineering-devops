#!/usr/bin/env bash

# Backup the original Nginx configuration file
mv /etc/nginx/nginx.conf /etc/nginx/nginx.conf.bak

# Create a custom Nginx configuration file with the necessary changes
cat <<EOL > /etc/nginx/nginx.conf
user nginx;
worker_processes auto;
error_log /var/log/nginx/error.log;
pid /run/nginx.pid;
include /usr/share/nginx/modules/*.conf;

events {
    worker_connections 768;
}

http {
    server {
        listen 8080;
        server_name _;

        location / {
            root /var/www/html;
            index index.html;
        }
    }
}
EOL

# Start Nginx with the custom configuration
nginx -g "daemon off;"
